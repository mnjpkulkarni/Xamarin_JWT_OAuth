<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Xamarin_JWT" x:Class="Xamarin_JWT.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to Xamarin.Forms JWT Example!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" x:Name="WelcomeLabel" />
        <Entry x:Name="UserNameEntry" Placeholder="Enter your User Name" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your Password" />
        <Button x:Name="LoginButton" Text="Login" Clicked="LoginClicked"/>
        <Button x:Name="GetCricketersButton" Text="Get Cricketers List" Clicked="GetCricketersClicked"/>
    </StackLayout>
</ContentPage>